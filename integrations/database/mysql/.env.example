# ============================================
# MySQL Database Configuration
# ============================================

# Database Connection
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=eatsgram_db
DB_DIALECT=mysql

# ============================================
# Connection Pool Settings
# ============================================

# Maximum number of connections in pool
DB_POOL_MAX=10

# Minimum number of connections in pool
DB_POOL_MIN=2

# Connection acquire timeout (milliseconds)
DB_POOL_ACQUIRE=30000

# Connection idle timeout (milliseconds)
DB_POOL_IDLE_TIMEOUT=30000

# ============================================
# Logging
# ============================================

# Enable database query logging (true/false)
DB_LOGGING=false

# Log level (error, warn, info, debug)
DB_LOG_LEVEL=info

# ============================================
# Timezone
# ============================================

# Database timezone (IST = +05:30)
DB_TIMEZONE=+05:30

# ============================================
# SSL Configuration (Production)
# ============================================

# Enable SSL for database connection (true/false)
DB_SSL_ENABLED=false

# SSL certificate path
DB_SSL_CERT_PATH=/path/to/cert.pem

# SSL key path
DB_SSL_KEY_PATH=/path/to/key.pem

# SSL CA path
DB_SSL_CA_PATH=/path/to/ca.pem

# ============================================
# Backup Configuration
# ============================================

# Enable automatic backups (true/false)
DB_BACKUP_ENABLED=true

# Backup frequency (daily, weekly, monthly)
DB_BACKUP_FREQUENCY=daily

# Backup time (HH:MM format, 24-hour)
DB_BACKUP_TIME=02:00

# Backup retention days
DB_BACKUP_RETENTION_DAYS=30

# ============================================
# Performance Tuning
# ============================================

# Enable query caching (true/false)
DB_QUERY_CACHE=false

# Query timeout (milliseconds)
DB_QUERY_TIMEOUT=30000

# Connection timeout (milliseconds)
DB_CONNECTION_TIMEOUT=10000

# ============================================
# Replication (Optional)
# ============================================

# Enable replication (true/false)
DB_REPLICATION_ENABLED=false

# Replica host
DB_REPLICA_HOST=replica.example.com

# Replica port
DB_REPLICA_PORT=3306

# Replica user
DB_REPLICA_USER=replica_user

# Replica password
DB_REPLICA_PASSWORD=replica_password

# ============================================
# Monitoring
# ============================================

# Enable database monitoring (true/false)
DB_MONITORING_ENABLED=true

# Monitoring interval (seconds)
DB_MONITORING_INTERVAL=60

# Alert threshold for slow queries (milliseconds)
DB_SLOW_QUERY_THRESHOLD=1000

# ============================================
# Development vs Production
# ============================================

# Environment (development, staging, production)
NODE_ENV=development

# For Development:
# DB_HOST=localhost
# DB_USER=root
# DB_PASSWORD=
# DB_LOGGING=true

# For Production:
# DB_HOST=prod-db.example.com
# DB_USER=prod_user
# DB_PASSWORD=strong_password_here
# DB_LOGGING=false
# DB_SSL_ENABLED=true
# DB_POOL_MAX=20
# DB_POOL_MIN=5

# ============================================
# Migration Settings
# ============================================

# Enable auto-migration on startup (true/false)
DB_AUTO_MIGRATE=false

# Migration timeout (milliseconds)
DB_MIGRATION_TIMEOUT=60000

# ============================================
# Sync Settings
# ============================================

# Auto sync models with database (true/false)
# WARNING: Only use in development!
DB_AUTO_SYNC=false

# Alter tables during sync (true/false)
DB_SYNC_ALTER=false

# Force sync (drop and recreate tables)
# WARNING: This will delete all data!
DB_SYNC_FORCE=false

# ============================================
# Character Set
# ============================================

# Database character set
DB_CHARSET=utf8mb4

# Database collation
DB_COLLATION=utf8mb4_unicode_ci

# ============================================
# Useful Commands
# ============================================

# Test connection:
# mysql -h DB_HOST -u DB_USER -p DB_PASSWORD -D DB_NAME

# Create database:
# CREATE DATABASE eatsgram_db CHARACTER SET utf8mb4 COLLATE utf8mb4_unicode_ci;

# Show tables:
# SHOW TABLES;

# Backup:
# mysqldump -h DB_HOST -u DB_USER -p DB_PASSWORD DB_NAME > backup.sql

# Restore:
# mysql -h DB_HOST -u DB_USER -p DB_PASSWORD DB_NAME < backup.sql
