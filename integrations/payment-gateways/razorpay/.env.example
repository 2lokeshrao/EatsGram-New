# ============================================
# Razorpay Configuration
# ============================================

# Razorpay API Keys (Test Mode)
RAZORPAY_KEY_ID=rzp_test_1DP5gbNptcWd65
RAZORPAY_KEY_SECRET=your_test_key_secret_here

# Razorpay Webhook Secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret_here

# ============================================
# Production Configuration (जब Live करें)
# ============================================

# Uncomment करें जब production में जाएं
# RAZORPAY_KEY_ID=rzp_live_your_live_key_id
# RAZORPAY_KEY_SECRET=your_live_key_secret
# RAZORPAY_WEBHOOK_SECRET=your_live_webhook_secret

# ============================================
# Application URLs
# ============================================

# Webhook Callback URL
RAZORPAY_WEBHOOK_URL=https://your-domain.com/api/webhooks/razorpay-webhook

# Payment Success/Failure URLs
RAZORPAY_SUCCESS_URL=https://your-domain.com/payment/success
RAZORPAY_FAILURE_URL=https://your-domain.com/payment/failure

# ============================================
# Payment Configuration
# ============================================

# Default Currency
RAZORPAY_CURRENCY=INR

# Payment Timeout (in seconds)
RAZORPAY_TIMEOUT=900

# Auto Capture Payment (true/false)
RAZORPAY_AUTO_CAPTURE=true

# ============================================
# Notification Settings
# ============================================

# Send SMS Notifications
RAZORPAY_SEND_SMS=true

# Send Email Notifications
RAZORPAY_SEND_EMAIL=true

# ============================================
# Logging
# ============================================

# Log Level (debug, info, warn, error)
RAZORPAY_LOG_LEVEL=info

# Log File Path
RAZORPAY_LOG_FILE=./logs/razorpay.log
